{
  "openapi": "3.0.1",
  "info": {
    "title": "X CRM MCP API",
    "description": "API for managing X follows with notes",
    "version": "1.0.0"
  },
  "paths": {
    "/follows": {
      "get": {
        "operationId": "getFollows",
        "summary": "Get all follows with their details and notes",
        "description": "Returns a comprehensive list of all people you follow on X, including their profile information and any notes you've added",
        "responses": {
          "200": {
            "description": "List of follows",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "follows": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Follow"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Authentication required"
          }
        }
      }
    },
    "/note/{username}": {
      "post": {
        "operationId": "setNote",
        "summary": "Set or update a note for a followed user",
        "description": "Add or update a personal note about someone you follow",
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
            "description": "The X username (without @)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "note",
            "in": "query",
            "required": true,
            "description": "The note to add or update",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Note updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "updated": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Authentication required"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Follow": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string",
            "description": "X user ID"
          },
          "username": {
            "type": "string",
            "description": "X username"
          },
          "name": {
            "type": "string",
            "description": "Display name"
          },
          "profile_image_url": {
            "type": "string",
            "description": "Profile picture URL"
          },
          "description": {
            "type": "string",
            "description": "Bio/description"
          },
          "followers_count": {
            "type": "integer",
            "description": "Number of followers"
          },
          "following_count": {
            "type": "integer",
            "description": "Number of people they follow"
          },
          "verified_type": {
            "type": "string",
            "description": "Verification type"
          },
          "is_blue_verified": {
            "type": "integer",
            "description": "Blue checkmark (1 or 0)"
          },
          "location": {
            "type": "string",
            "description": "Location from profile"
          },
          "created_at": {
            "type": "string",
            "description": "Account creation date"
          },
          "note": {
            "type": "string",
            "description": "Your personal note about this person"
          },
          "synced_at": {
            "type": "string",
            "description": "When this data was last synced"
          }
        }
      }
    }
  }
}
